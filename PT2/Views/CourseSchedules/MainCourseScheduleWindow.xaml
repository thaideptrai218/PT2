<Window
    x:Class="PT2.Views.CourseSchedules.MainCourseScheduleWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PT2.Views.CourseSchedules"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainCourseScheduleWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="15*" />
            <RowDefinition Height="70*" />
            <RowDefinition Height="15*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
            <ComboBox
                Name="cbCourses"
                Width="250"
                Height="30"
                Margin="0,0,20,0"
                DisplayMemberPath="CourseCode"
                ItemsSource="{Binding Courses}"
                SelectedValue="{Binding FilteredText, UpdateSourceTrigger=PropertyChanged}"
                SelectedValuePath="CourseId" />
            <TextBox Text="{Binding FilteredText, UpdateSourceTrigger=PropertyChanged}" Width="200" Height="30" />
        </StackPanel>

        <DataGrid
            Name="ScheduleGrid"
            Grid.Row="1"
            Margin="10"
            AutoGenerateColumns="False"
            Background="Bisque"
            IsReadOnly="True"
            ItemsSource="{Binding FilteredCourseSchedules}"
            SelectedItem="{Binding SelectedCourseSchedule, Mode=TwoWay}"
            SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn Width="120" Binding="{Binding TeachingScheduleId}" Header="TeachingScheduleId" />
                <DataGridTextColumn Width="70" Binding="{Binding CourseId}" Header="CourseID" />
                <DataGridTextColumn Width="200" Binding="{Binding TeachingDate}" Header="TeachingDate" />
                <DataGridTextColumn Width="50" Binding="{Binding Slot}" Header="Slot" />
                <DataGridTextColumn Width="100" Binding="{Binding RoomId}" Header="RoomID" />
                <DataGridTextColumn Width="100" Binding="{Binding Description}" Header="Description" />
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel
            Grid.Row="2"
            Margin="10"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Button
                Name="btnAdd"
                Width="100"
                Height="40"
                Margin="0,0,20,0"
                Command="{Binding AddCommand}"
                Content="Add" />
            <Button
                Name="btnEdit"
                Width="100"
                Height="40"
                Margin="0,0,20,0"
                Command="{Binding EditCommand}"
                Content="Edit" />
            <Button
                Name="btnDelete"
                Width="100"
                Height="40"
                Margin="0,0,20,0"
                Command="{Binding DeleteCommand}"
                Content="Delete" />
            <Button
                Name="btnReset"
                Width="100"
                Height="40"
                Margin="0,0,20,0"
                Command="{Binding ResetCommand}"
                Content="Reset" />
        </StackPanel>
    </Grid>
</Window>
