<Window
    x:Class="PT2.Views.CourseSchedules.EditCourseScheduleWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PT2.Views.CourseSchedules"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="EditCourseScheduleWindow"
    Width="400"
    Height="450"
    mc:Ignorable="d">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Label
            Grid.Row="0"
            Grid.Column="0"
            Margin="5"
            Content="Course:" />
        <ComboBox
            Grid.Row="0"
            Grid.Column="1"
            Margin="5"
            DisplayMemberPath="CourseCode"
            ItemsSource="{Binding Courses}"
            SelectedItem="{Binding SelectedCourse, Mode=TwoWay}" />

        <Label
            Grid.Row="1"
            Grid.Column="0"
            Margin="5"
            Content="Room:" />
        <ComboBox
            Grid.Row="1"
            Grid.Column="1"
            Margin="5"
            DisplayMemberPath="RoomCode"
            ItemsSource="{Binding Rooms}"
            SelectedItem="{Binding SelectedRoom, Mode=TwoWay}" />

        <Label
            Grid.Row="2"
            Grid.Column="0"
            Margin="5"
            Content="Date:" />
        <DatePicker
            Grid.Row="2"
            Grid.Column="1"
            Margin="5"
            SelectedDate="{Binding editingCourseSchedule.TeachingDate}" />

        <Label
            Grid.Row="3"
            Grid.Column="0"
            Margin="5"
            Content="Slot:" />
        <TextBox
            Grid.Row="3"
            Grid.Column="1"
            Margin="5"
            Text="{Binding editingCourseSchedule.Slot, Mode=TwoWay}" />

        <Label
            Grid.Row="4"
            Grid.Column="0"
            Margin="5"
            Content="Description:" />
        <TextBox
            Grid.Row="4"
            Grid.Column="1"
            Margin="5"
            Text="{Binding editingCourseSchedule.Description, Mode=TwoWay}" />

        <Button
            Grid.Row="5"
            Grid.Column="1"
            Margin="5"
            HorizontalAlignment="Right"
            Command="{Binding SaveCommand}"
            Content="Save" />
    </Grid>
</Window>
