<Window
    x:Class="PT2.Views.CourseSchedules.AddCourseScheduleWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PT2.Views.CourseSchedules"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="AddCourseScheduleWindow"
    Width="300"
    Height="500"
    mc:Ignorable="d">
    <Grid>
        <StackPanel
            Margin="0,50"
            HorizontalAlignment="Center"
            VerticalAlignment="Top">
            <Label
                Margin="25,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="CourseName" />
            <ComboBox
                Name="cbCourseName"
                Width="200"
                Height="30"
                Margin="30,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                BorderBrush="Aqua"
                BorderThickness="1"
                DisplayMemberPath="CourseCode"
                ItemsSource="{Binding Courses}"
                SelectedItem="{Binding SelectedCourse, Mode=TwoWay}" />

            <Label
                Margin="25,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="TeachingDate" />
            <DatePicker
                Name="teachingDate"
                Width="200"
                Height="30"
                Margin="30,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                BorderBrush="Aqua"
                BorderThickness="1"
                SelectedDate="{Binding NewCourseSchedule.TeachingDate, Mode=TwoWay}" />

            <Label
                Margin="25,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Slot" />
            <TextBox
                Name="slotTxt"
                Width="200"
                Height="30"
                Margin="30,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Left"
                VerticalContentAlignment="Center"
                BorderBrush="Aqua"
                BorderThickness="1"
                Text="{Binding NewCourseSchedule.Slot, Mode=TwoWay}" />

            <Label
                Margin="25,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="RoomCode" />
            <ComboBox
                Name="cbRoomID"
                Width="200"
                Height="30"
                Margin="30,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                BorderBrush="Aqua"
                BorderThickness="1"
                DisplayMemberPath="RoomCode"
                ItemsSource="{Binding Rooms}"
                SelectedItem="{Binding SelectedRoom, Mode=TwoWay}" />

            <Label
                Margin="25,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Content="Description" />
            <TextBox
                Name="descTxt"
                Width="200"
                Height="30"
                Margin="30,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Left"
                VerticalContentAlignment="Center"
                BorderBrush="Aqua"
                BorderThickness="1"
                Text="{Binding NewCourseSchedule.Description, Mode=TwoWay}" />

            <Button
                Name="addScheduleBtn"
                Width="100"
                Height="30"
                Margin="30,20,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="#4CAF50"
                BorderBrush="#4CAF50"
                BorderThickness="1"
                Command="{Binding AddCommand}"
                Content="Add Schedule"
                Foreground="White" />
        </StackPanel>
    </Grid>
</Window>
