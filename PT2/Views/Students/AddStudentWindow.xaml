<Window
    x:Class="PT2.Views.Students.AddStudentWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PT2.Views.Students"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Add New Student"
    Width="500"
    Height="350"
    Background="#F5F5F5"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Label
            Grid.Row="0"
            Grid.Column="0"
            Margin="0,0,10,0"
            VerticalAlignment="Center"
            Content="Roll:"
            FontWeight="Medium" />
        <TextBox
            Grid.Row="0"
            Grid.Column="1"
            Margin="0,5"
            Padding="5"
            BorderBrush="#CCCCCC"
            BorderThickness="1"
            Text="{Binding addingStudent.Roll}" />

        <Label
            Grid.Row="1"
            Grid.Column="0"
            Margin="0,0,10,0"
            VerticalAlignment="Center"
            Content="First Name:"
            FontWeight="Medium" />
        <TextBox
            Grid.Row="1"
            Grid.Column="1"
            Margin="0,5"
            Padding="5"
            BorderBrush="#CCCCCC"
            BorderThickness="1"
            Text="{Binding addingStudent.FirstName}" />

        <Label
            Grid.Row="2"
            Grid.Column="0"
            Margin="0,0,10,0"
            VerticalAlignment="Center"
            Content="Mid Name:"
            FontWeight="Medium" />
        <TextBox
            Grid.Row="2"
            Grid.Column="1"
            Margin="0,5"
            Padding="5"
            BorderBrush="#CCCCCC"
            BorderThickness="1"
            Text="{Binding addingStudent.MidName}" />

        <Label
            Grid.Row="3"
            Grid.Column="0"
            Margin="0,0,10,0"
            VerticalAlignment="Center"
            Content="Last Name:"
            FontWeight="Medium" />
        <TextBox
            Grid.Row="3"
            Grid.Column="1"
            Margin="0,5"
            Padding="5"
            BorderBrush="#CCCCCC"
            BorderThickness="1"
            Text="{Binding addingStudent.LastName}" />

        <StackPanel
            Grid.Row="4"
            Grid.Column="1"
            HorizontalAlignment="Right"
            VerticalAlignment="Bottom"
            Orientation="Horizontal">
            <Button
                Width="100"
                Margin="5"
                Padding="10,5"
                Background="#007ACC"
                BorderThickness="0"
                Command="{Binding SaveCommand}"
                Content="Save"
                Cursor="Hand"
                Foreground="White" />
            <Button
                Width="100"
                Margin="5"
                Padding="10,5"
                Background="#757575"
                BorderThickness="0"
                Content="Cancel"
                Cursor="Hand"
                Foreground="White"
                IsCancel="True" />
        </StackPanel>
    </Grid>
</Window>