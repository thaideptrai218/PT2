<Window
    x:Class="PT2.Views.Students.MainStudentWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PT2.Views.Students"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Student Management"
    Width="800"
    Height="600"
    Background="#F5F5F5"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="17*" />
            <ColumnDefinition Width="363*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="24.978" />
            <RowDefinition Height="22.982" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--  Search Bar  -->
        <StackPanel
            Grid.Row="0"
            Grid.RowSpan="2"
            Grid.ColumnSpan="2"
            Margin="0,0,0,20"
            Orientation="Horizontal">
            <Label
                VerticalAlignment="Center"
                Content="Search:"
                FontWeight="Medium" />
            <TextBox
                Width="300"
                Margin="10,0,0,0"
                Padding="5"
                VerticalContentAlignment="Center"
                BorderBrush="#CCCCCC"
                BorderThickness="1"
                Text="{Binding SearchText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>

        <!--  Student DataGrid  -->
        <DataGrid
            Name="StudentGrid"
            Grid.Row="2"
            Grid.ColumnSpan="2"
            AutoGenerateColumns="False"
            Background="White"
            BorderBrush="#DDDDDD"
            BorderThickness="1"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            CanUserResizeRows="False"
            GridLinesVisibility="Horizontal"
            HorizontalGridLinesBrush="#E0E0E0"
            ItemsSource="{Binding FilteredStudents}"
            RowHeaderWidth="0"
            SelectedItem="{Binding SelectedStudent, Mode=TwoWay}"
            SelectionMode="Single">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="100"
                    Binding="{Binding StudentId}"
                    Header="Student ID" />
                <DataGridTextColumn
                    Width="120"
                    Binding="{Binding Roll}"
                    Header="Roll" />
                <DataGridTextColumn
                    Width="120"
                    Binding="{Binding FirstName}"
                    Header="First Name" />
                <DataGridTextColumn
                    Width="120"
                    Binding="{Binding MidName}"
                    Header="Mid Name" />
                <DataGridTextColumn
                    Width="120"
                    Binding="{Binding LastName}"
                    Header="Last Name" />
                <DataGridTextColumn
                    Width="*"
                    Binding="{Binding FullName}"
                    Header="Full Name" />
                <DataGridTemplateColumn Width="100" Header="Update">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button
                                Command="{Binding DataContext.EditCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                CommandParameter="{Binding}"
                                Content="Update" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!--  Action Buttons  -->
        <StackPanel
            Grid.Row="3"
            Grid.Column="1"
            Width="440"
            Margin="0,20,0,0"
            HorizontalAlignment="Right"
            Orientation="Horizontal">
            <Button
                Name="btnAdd"
                Width="100"
                Margin="5"
                Padding="10,5"
                Background="#007ACC"
                BorderThickness="0"
                Command="{Binding AddCommand}"
                Content="Add"
                Cursor="Hand"
                Foreground="White" />
            <Button
                Name="btnEdit"
                Width="100"
                Margin="5"
                Padding="10,5"
                Background="#007ACC"
                BorderThickness="0"
                Command="{Binding EditCommand}"
                CommandParameter="{Binding SelectedStudent}"
                Content="Edit"
                Cursor="Hand"
                Foreground="White" />
            <Button
                Name="btnDelete"
                Width="100"
                Margin="5"
                Padding="10,5"
                Background="#E53935"
                BorderThickness="0"
                Command="{Binding DeleteCommand}"
                Content="Delete"
                Cursor="Hand"
                Foreground="White" />
            <Button
                Name="btnReset"
                Width="100"
                Margin="5"
                Padding="10,5"
                Background="#757575"
                BorderThickness="0"
                Command="{Binding ResetCommand}"
                Content="Reset"
                Cursor="Hand"
                Foreground="White" />
        </StackPanel>
    </Grid>
</Window>
